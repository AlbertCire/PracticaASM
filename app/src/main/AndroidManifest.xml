<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.urv.deim.asm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" >
        <!-- android:theme="@style/Theme.AppCompat.NoActionBar"> -->
        <activity android:name=".p2.common.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".p2.common.TutorialActivity"/>
        <activity android:name=".p2.common.LoginActivity"/>
        <activity android:name=".p2.common.Login2Activity"/>
        <activity android:name=".p2.common.ErrorLoginActivity"/>
        <activity android:name=".p2.common.MainActivity"/>
        <activity android:name=".p2.common.ProfileActivity"/>
        <activity android:name=".p2.common.ExtraActivity"/>
        <activity android:name=".p3.shared.FaqsActivity"/>
        <activity android:name=".p3.shared.EventDetailActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:authorities="cat.urv.deim.asm.p3.shared"
            android:name="cat.urv.deim.asm.p3.shared.SQLiteProvider"
            android:readPermission="cat.urv.deim.asm.p3.shared.READ_DATABASE"
            android:writePermission="cat.urv.deim.asm.p3.shared.WRITE_DATABASE" />
    </application>

    <!-- New permissions (Practica 3) -->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="cat.urv.deim.asm.p3.shared.READ_DATABASE" />
    <uses-permission android:name="cat.urv.deim.asm.p3.shared.WRITE_DATABASE" />
</manifest>