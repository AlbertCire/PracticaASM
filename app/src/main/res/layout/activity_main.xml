<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:foregroundGravity="center_vertical"
        app:headerLayout="@layout/menu_navigation_header"
        app:menu="@menu/menu_navigation_drawer"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-135dp">

        <LinearLayout
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#00BCD4"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:titleMargin="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/main_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/main_title"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/toolbar_search"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/search_white" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/news_card_1"
                android:layout_width="375dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/cardview_light_background">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/news_title_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="80dp"
                                android:layout_marginBottom="10dp"
                                android:text="News 1"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/news_content_"
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="10dp"
                                android:text="Secondary line text Lorem ipsum dolor sit amet"
                                android:textColor="@color/cardview_dark_background" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/card_image_1"
                            android:layout_width="160dp"
                            android:layout_height="115dp"
                            app:srcCompat="@drawable/cafeteria" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/fav_icon_1"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/favorite_black" />

                            <ImageView
                                android:id="@+id/bookmark_icon_1"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/bookmark_black" />
                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/news_card_2"
                android:layout_width="375dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/cardview_light_background">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/news_title_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="80dp"
                                android:layout_marginBottom="10dp"
                                android:text="News 2"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/news_content_2"
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="10dp"
                                android:text="Secondary line text Lorem ipsum dolor sit amet"
                                android:textColor="@color/cardview_dark_background" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/card_image_2"
                            android:layout_width="160dp"
                            android:layout_height="115dp"
                            app:srcCompat="@drawable/cafeteria" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/fav_icon_2"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/favorite_border" />

                            <ImageView
                                android:id="@+id/bookmark_icon_2"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/bookmark_border" />
                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|left"
            android:background="@color/cardview_light_background"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/menu_navigation_header"
            app:itemIconTint="@color/cardview_dark_background"
            app:itemTextColor="@color/cardview_dark_background"
            app:menu="@menu/menu_navigation_drawer" />

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>